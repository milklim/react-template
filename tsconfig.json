{
  "compilerOptions": {
    "outDir": "dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "esnext",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "removeComments": true,
    "baseUrl": ".",
    "rootDirs": ["src"],
    "paths": { // path for abs imports
      "App": ["src/App"],
      "styles": ["src/styles.ts"],
      "@components": ["src/components/*"],
      "@features/*": ["src/features/*"],
      "@pages/*": ["src/pages/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}
