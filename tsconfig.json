{
  "compilerOptions": {
    "outDir": "dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "esnext",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "removeComments": true,
    "baseUrl": ".",
    "rootDirs": ["src"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
